<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<AnchorPane xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.sss.LoginController"
            prefWidth="400" prefHeight="300">

    <VBox layoutX="100" layoutY="70" spacing="10">
        <Label text="Student Savings System Login" style="-fx-font-size: 16px; -fx-font-weight: bold;" />
        <TextField fx:id="usernameField" promptText="Username" />
        <PasswordField fx:id="passwordField" promptText="Password" />
        <Button text="Login" onAction="#onLoginButtonClick" />
    </VBox>

</AnchorPane>
